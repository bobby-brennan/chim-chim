{
  "manifest_version": 2,

  "name": "Chim-Chim",
  "description": "Go faster",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "storage"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [{
      "matches": ["http://*/*", "https://*/*"],
      "js": ["jquery.js", "chim-chim.js", "chim-chim-runner.js"],
      "run_at": "document_end"
  }]
}
